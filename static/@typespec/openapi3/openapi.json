        ],
        "operationId": "Docs_openapi",
        "summary": "OpenAPI JSON spec",
        "description": "Reflection endpoint to return OpenAPI JSON spec. Also used by Swagger to generate the frontpage.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "The OpenAPI JSON spec",
