    },
    "/health": {
      "get": {
        "tags": [
          "Monitoring"
        ],
        "operationId": "Monitoring_health",
        "summary": "Health check",
        "description": "Checks database connection.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK or ApiError.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "default": {
